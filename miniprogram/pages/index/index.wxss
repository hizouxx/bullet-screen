/**index.wxss**/

.container{
  height:100vh;
  overflow: hidden;
  
}
.bulletscreen{
  height: 100%;
  position: relative;
}

.background{
  position: absolute;
  left: 0;
  top: 0;
  z-index: 1;
  width: 750rpx;
  height: 1267rpx;
}
.switch{
  position: absolute;
  right: 10rpx;
  bottom: 30rpx;
  z-index: 2;
}

.ordered-group, .disorder-group{
  position: absolute;
  left: 100%;
  z-index: 10;
  height: 60rpx;
  animation-timing-function: linear;
  animation-fill-mode: none;
  transform: translateZ(0);
  white-space: nowrap;
}

.ordered-group-list{
  display: inline-flex;
  margin-right: 60rpx;
  white-space: nowrap;
}






.group-list-item{
  position: relative;
  display: inline-flex;
  vertical-align: middle;
  align-items: center;
  height: 50rpx;
  line-height: 50rpx;
  padding: 0 15rpx 0 5rpx;
  background: rgba(0,0,0,.5);
  border-radius: 25rpx;
  overflow: hidden;
  font-size: 24rpx;
  color: #fff;
}
.group-list-item-avatar{
  position: relative;
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}
.group-list-item-avatar .avatar{
  width: 40rpx;
  height: 40rpx;
  border: 0;
  border-radius: 50%;
}
.group-list-item-avatar .gender{
  position: absolute;
  left: 25rpx;
  top: 18rpx;
  width: 22rpx;
  height: 22rpx;
}
.group-list-item-content{
  display: inline-block;
  max-width: 440rpx;
  height: 50rpx;
  line-height: 50rpx;
  margin-right: 10rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}



@keyframes dmAnimation{ 
  0% { transform: translateX(0); } 
  100% { transform: translateX(-130%); } 
}

@keyframes dmAnimation2{
  from{ left: 100%; }
  to{ left: -100%; }
}
